# n8n Configuration
# Copy this file to .env and update with your values

# Host configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# Webhook URL (update with your domain if using reverse proxy)
WEBHOOK_URL=http://localhost:5678/

# Timezone (use your local timezone)
TIMEZONE=America/Sao_Paulo

# Encryption key (IMPORTANT: Generate a random string for production)
# You can generate one with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=your-secure-encryption-key-here

# Database type (sqlite or postgresdb)
DB_TYPE=sqlite

# PostgreSQL configuration (only if using DB_TYPE=postgresdb)
# DB_POSTGRESDB_HOST=postgres
# DB_POSTGRESDB_PORT=5432
# DB_POSTGRESDB_DATABASE=n8n
# DB_POSTGRESDB_USER=n8n
# DB_POSTGRESDB_PASSWORD=your-secure-password-here

# Basic authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-secure-password-here
