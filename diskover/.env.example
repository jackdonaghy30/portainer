# Timezone
TZ=Europe/Berlin

# IDs do usuário/grupo que executa o container (use: id -u e id -g)
PUID=1000
PGID=1000

# Heap do Elasticsearch — use metade da RAM disponível (ex.: 512m, 1g, 2g)
ES_HEAP_SIZE=512m

# Porta exposta do Elasticsearch no host (padrão: 9200)
ES_PORT=9200

# Porta exposta da interface web do Diskover no host (padrão: 8000)
DISKOVER_PORT=8000

# Nome do índice no Elasticsearch
INDEX_NAME=diskover

# Profundidade máxima de diretórios a indexar
DISKOVER_MAXDEPTH=50

# Caminho no host para os dados a serem indexados pelo Diskover
DATA_LOCATION=/mnt/data

# Caminho no host para os arquivos de configuração do Diskover
CONFIG_LOCATION=./config
